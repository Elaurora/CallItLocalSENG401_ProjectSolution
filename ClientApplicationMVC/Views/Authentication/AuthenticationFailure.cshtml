@{
    ViewBag.Title = "Log In";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    <p>Please enter your username and password</p>
    <br />
    <p>Username:</p>
    @Html.TextBox("textUsername") <br /> <br />
    <p>Password:</p>
    @Html.TextBox("textPassword") <br /> <br />
    <input type="submit" value="Login" />
    <br/><br />
    @ViewBag.Result
}