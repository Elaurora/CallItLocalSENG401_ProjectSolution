<!--
    This is the html page that opens when a user navigates to the create an account page
-->
@{
    ViewBag.Title = "CreateAccount";
}

<h2>CreateAccount</h2>

@using (Html.BeginForm("CreateAccount", "Authentication"))
{
    <p>@ViewBag.Message</p>
    <br />
    <p>Username:</p>
    @Html.TextBox("textUsername") <br /> <br />
    <p>Password:</p>
    @Html.TextBox("textPassword") <br /> <br />
    <p>Address:</p>
    @Html.TextBox("textAddress") <br /> <br />
    <p>Phonenumber:</p>
    @Html.TextBox("textPhoneNumber") <br /> <br />
    <p>Email:</p>
    @Html.TextBox("textEmail") <br /> <br />
    <p>Is it a business account ?</p>
    @Html.CheckBox("accountType") <br /> <br />

    <input type="submit" value="Submit Account Info" /><br /><br />

    <p>Already have an account ? </p>

    @Html.ActionLink("Log In", "Index", "Authentication")

    <br /><br />
    @ViewBag.Result
}