<!--
    This is the index page for the chat controller.
    It is also the login page
-->

@{
    ViewBag.Title = "Log In";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("LogIn", "Authentication", FormMethod.Post,
    new { id = "logInForm", onsubmit = "return validateLoginInfo()" }))
{

    <p>@ViewBag.Message</p>
    <br />
    <p>Username:</p>
    @Html.TextBox("textUsername") <br/> <br/>
    <p>Password:</p>
    @Html.TextBox("textPassword") <br/> <br/>
    <input onclick="" id="LoginSubmitButton" type="submit" value="Log In" /><br/><br />

    <p>Dont have an account ? </p>

    @Html.ActionLink("Create One", "CreateAccount", "Authentication")
}


<script>
    var username = "Log In";

    function validateLoginInfo() {
        if (logInForm.textUsername.value === "") {
            alert("Username cannot be left blank");
            return false;
        }
        if (logInForm.textPassword.value === "") {
            alert("Password cannot be left blank");
            return false;
        }
        username = logInForm.textUsername.value;
        return true;
    }
</script>